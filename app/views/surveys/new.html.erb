<div class="nameHeaders">
  <h1>New survey</h1>

  <% if @survey.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @survey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= render "layouts/survey_form" %>

</div>
